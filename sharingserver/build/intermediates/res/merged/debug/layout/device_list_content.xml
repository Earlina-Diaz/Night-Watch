<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:layout_margin="@dimen/icon_margin"
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        android:id="@+id/device_icon"
        android:src="@mipmap/ic_speaker_phone"/>

    <TextView android:id="@+id/id" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_margin="@dimen/text_margin"
        android:textAppearance="?attr/textAppearanceListItem" />

    <TextView android:id="@+id/content" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_margin="@dimen/text_margin"
        android:textAppearance="?attr/textAppearanceListItem" />
</LinearLayout>